doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&display=swap" rel="stylesheet")
    link(rel="stylesheet", href="./css/reset.css")
    link(rel="stylesheet", href="main.min.css")
    title Landing3
  body 
    .wrapper
      header.header.wrapper__header
        .header__container._container
          .header__body
            .header__logo Relvise
            nav.header__navigation 
              ul.header__navList 
                li.header__navListItem 
                  a(href="#") Home
                li.header__navListItem 
                  a(href="#") Product
                li.header__navListItem
                  a(href="#") Pricing
                li.header__navListItem
                  a(href="#") Contact
      main
        section.mainBlock.wrapper__mainBlock
          .mainBlock__container._container 
            .mainBlock__body 
              h1.mainBlock__title Finance and Consultancy Solution
              .mainBlock__text We know how large objects will act, but things on a small scale.
              .mainBlock__buttons 
                a(href="#").mainBlock__button.button.button--orange Get Quote Now
                a(href="#").mainBlock__button.button Learn More
          .mainBlock__ibg._ibg 
            img(src="./img/cover.jpg", alt="cover")
        section.features.wrapper__features 
          .features__content._container
            .feature.features__feature
              .feature__content
                .feature__image 
                  img.feature__default(src="./img/features/EC.svg", alt="EC")
                  img.feature__active(src="./img/features/ECwhite.svg", alt="")
                h3.feature__title Environmental Consulting
                .feature__text We focus on ergonomics and meeting you where you work.
            .feature.features__feature
                .feature__content
                  .feature__image 
                    img.feature__default(src="./img/features/FC.svg", alt="EC")
                    img.feature__active(src="./img/features/FCwhite.svg", alt="")
                  h3.feature__title Finance and consultancy 
                  .feature__text Just type what's on your mind and we'll get you there.
            .feature.features__feature
                .feature__content
                  .feature__image 
                    img.feature__default(src="./img/features/FS.svg", alt="EC")
                    img.feature__active(src="./img/features/FSwhite.svg", alt="")
                  h3.feature__title Financial Services Consulting
                  .feature__text The quick fox jumps over the lazy dog
        section.experience.wrapper__experience
          .experience__content._container
            .blockHeader.experience__blockHeader 
              h2.blockHeader__title Designing Better Experience
              .blockHeader__text Problems trying to resolve the conflict between the two major realms#[br]of Classical physics: Newtonian mechanics
            .experience__expFeatures
              .expFeature.experience__expFeature
                .expFeature__content
                  .expFeature__img 
                    img(src="./img/expFeatures/1.svg", alt="people")
                  .expFeature__count 972 +
                  .expFeature__text Consumer Products
              .expFeature.experience__expFeature
                .expFeature__content
                  .expFeature__img 
                    img(src="./img/expFeatures/2.svg", alt="molecule")
                  .expFeature__count 181 +
                  .expFeature__text Financial Services
              .expFeature.experience__expFeature
                .expFeature__content
                  .expFeature__img 
                    img(src="./img/expFeatures/3.svg", alt="medal")
                  .expFeature__count 98%
                  .expFeature__text Environmental
              .expFeature.experience__expFeature
                .expFeature__content
                  .expFeature__img 
                    img(src="./img/expFeatures/4.svg", alt="case")
                  .expFeature__count 746 +
                  .expFeature__text Business & Finance
